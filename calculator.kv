<MyLayout>
    BoxLayout
        orientation:"vertical"
        size: root.width, root.height

        TextInput:
            id : input_field
            text: "0"
            halign: "right"
            size_hint: (1.0, .15)
    	    font_size: 50

        GridLayout:
            cols: 4
            rows: 5
            spacing: 5

            Button:
                text: "%"
                size_hint: (.2, .2)
                font_size: 35
                background_color: 247.0/255.0, 184/255.0, 56.0/255, 1.0
                background_normal:""
                on_press: root.buttonclicked("%")

            Button:
                text: "CE"
                size_hint: (.2, .2)
                font_size: 50
                background_color: 247.0/255.0, 184/255.0, 56.0/255, 1.0
                background_normal:""
                on_press: root.clearOneDigit()

            Button:
                text: "C"
                size_hint: (.2, .2)
                font_size: 50
                background_color: 247.0/255.0, 184/255.0, 56.0/255, 1.0
                background_normal:""
                on_press: root.clearInput()
            
            Button:
                text: "+"
                size_hint: (.2, .2)
                font_size: 50
                background_color: 247.0/255.0, 184/255.0, 56.0/255, 1.0
                background_normal:""
                on_press: root.buttonclicked("+")


            Button:
                text: "7"
                size_hint: (.2, .2)
                font_size: 50
                background_color: 44.0/255.0, 47/255.0, 141.0/255, 1.0
                background_normal:""
                on_press: root.buttonclicked("7")

            Button:
                text: "8"
                size_hint: (.2, .2)
                font_size: 50
